{
    "name": "URL Decoder Extension",
    "description": "Decode URI components from URL parameters and display as a list.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_icon": {
            "16": "/img/icon16.png",
            "32": "/img/icon32.png"
        },
        "default_title": "Click to view a popup",
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "/img/icon16.png",
        "32": "/img/icon32.png",
        "48": "/img/icon48.png",
        "128": "/img/icon128.png"
    }
}